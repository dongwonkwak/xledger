# EditorConfig for Xledger Project
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{java,kt,kts}]
indent_style = space
indent_size = 2
max_line_length = 100
continuation_indent_size = 4

[*.{xml,xsd}]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{gradle,gradle.kts}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.{sh,bash}]
indent_style = space
indent_size = 2
